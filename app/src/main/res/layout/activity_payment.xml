<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment"
    style="@style/Theme.AppCompat.DayNight.NoActionBar">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment_tv_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="Payment Details"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customize Your Payment method"
        android:textColor="@color/gray"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/payment_tv_title"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/payment_button_card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/payment_tv_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:autoSizeMinTextSize="18sp"
        android:backgroundTint="@color/black"
        android:text="+ Add Another Credit/Debit Card"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="30dp" />

</RelativeLayout>