<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".More"
    style="@style/Theme.AppCompat.DayNight.NoActionBar">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/more_layout_linear"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/more_image_user"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingStart="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/testimonioals" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="50dp"
        android:id="@+id/more_tv_title"
        android:text="Hi Nikhil"
        android:paddingStart="30dp"/>


    <Button
        android:id="@+id/more_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/more_tv_title"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="2dp"
        android:text="Edit Profile"
        android:textColor="@color/brown"
        android:textSize="15dp"
        app:cornerRadius="30dp" />


</RelativeLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/more_rv_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_layout_linear"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/more_btn_signout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/more_rv_recycler"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textColor="@color/brown"
        android:textSize="20sp"
        app:cornerRadius="30dp" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/more_bnav_bottom"
        android:layout_alignParentBottom="true"
        app:itemRippleColor="@color/white"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        android:elevation="2dp"
        app:menu="@menu/menu_bottom_navigation"/>





</RelativeLayout>